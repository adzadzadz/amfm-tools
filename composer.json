{
    "name": "adzadzadz/amfm-tools",
    "description": "AMFM Tools - A plugin for AMFM custom functionalities, built with ADZ Framework",
    "type": "wordpress-plugin",
    "authors": [
        {
            "name": "Adrian T. Saycon",
            "email": "adz@adzbyte.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "adzadzadz/wp-plugin-framework": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "mockery/mockery": "^1.4"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage"
    }
}