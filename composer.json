{
  "name": "adz/wp-plugin-framework",
  "description": "Advanced WordPress plugin development framework with comprehensive testing support",
  "type": "wordpress-plugin",
  "license": "MIT",
  "authors": [{
    "name": "Adrian T. Saycon",
    "email": "adzbite@gmail.com"
  }],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "adz\\": "src/",
      "AdzWP\\": "adz/wp/"
    },
    "files": [
      "adz/wp/helpers/functions.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "require": {
    "php": ">=7.4",
    "adz/adz": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0|^10.0|^11.0",
    "brain/monkey": "^2.6",
    "mockery/mockery": "^1.4",
    "squizlabs/php_codesniffer": "^3.7",
    "phpstan/phpstan": "^1.8",
    "wp-cli/wp-cli-bundle": "^2.8"
  },
  "scripts": {
    "test": "phpunit",
    "test:coverage": "phpunit --coverage-html coverage",
    "test:unit": "phpunit --testsuite=Unit",
    "test:integration": "phpunit --testsuite=Integration",
    "cs:check": "phpcs --standard=PSR12 src/ tests/",
    "cs:fix": "phpcbf --standard=PSR12 src/ tests/",
    "analyse": "phpstan analyse src/ --level=5",
    "post-install-cmd": [
      "sh adz.sh"
    ],
    "install-wp-tests": [
      "./bin/install-wp-tests.sh"
    ]
  },
  "repositories": [{
    "type": "path",
    "url": "./adz"
  }],
  "config": {
    "allow-plugins": {
      "composer/installers": true
    },
    "optimize-autoloader": true
  }
}